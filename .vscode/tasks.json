{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "AWS: List S3 Buckets",
            "type": "shell",
            "command": "aws s3 ls",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": "aws"
        },
        {
            "label": "AWS: Deploy Transformer Model",
            "type": "shell",
            "command": "./scripts/deploy.sh",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "AWS: Destroy Infrastructure",
            "type": "shell",
            "command": "cd terraform && terraform destroy -auto-approve",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": "aws"
        },
        {
            "label": "AWS: Upload Model to S3",
            "type": "shell",
            "command": "aws s3 cp src/model/transformer_model.pt s3://${input:bucketName}/model/ && aws s3 cp src/model/tokenizer.json s3://${input:bucketName}/model/",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": "aws"
        },
        {
            "label": "AWS: Check Lambda Logs",
            "type": "shell",
            "command": "aws logs filter-log-events --log-group-name '/aws/lambda/${input:lambdaName}' --limit 10",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": "aws"
        }
    ],
    "inputs": [
        {
            "id": "bucketName",
            "description": "S3 Bucket Name",
            "default": "transformer-model-artifacts",
            "type": "promptString"
        },
        {
            "id": "lambdaName",
            "description": "Lambda Function Name",
            "default": "transformer-model-generate-text",
            "type": "promptString"
        }
    ]
}